{
    "mode": "sr",
    "use_cl": false,
    "gpu_ids": [0,1],

    "scale": 2,
    "is_train": true,
    "use_chop": true,
    "rgb_range": 1,
    "self_ensemble": false,
    "save_image": false,

    "datasets": {
        "train": {
            "mode": "LRHR",
            "dataroot_HR": "./your_hr_folder",
            "dataroot_LR": "./your_lr_folder",
            "data_type": "npy",
            "n_workers": 4,
            "batch_size": 8,
            "LR_size": 50,
            "use_flip": true,
            "use_rot": true,
            "noise": "."
        },
        "val": {
            "mode": "LRHR",
            "dataroot_HR": "./hr_test_folder",
            "dataroot_LR": "./lr_test_folder",
            "data_type": "img"
        }
    },

    "networks": {
        "which_model": "DIN",
        "num_features": 64,
        "growthrate": 32,
        "in_channels": 3,
        "out_channels": 3
    },

    "solver": {
        "type": "ADAM",
        "learning_rate": 0.0001,
        "weight_decay": 0,
        "lr_scheme": "MultiStepLR",
        "lr_steps": [200, 400, 600, 800],
        "lr_gamma": 0.5,
        "loss_type": "l1",
        "manual_seed": 0,
        "num_epochs": 600,
        "skip_threshold": 3,
        "split_batch": 1,
        "save_ckp_step": 50,
        "save_vis_step": 1,
        "pretrain": null,
        "pretrained_path": "",
        "cl_weights": [1.0, 1.0, 1.0, 1.0]
    }
}
